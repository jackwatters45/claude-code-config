{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "WebFetch",
      "WebSearch",
      "Bash(ls:*)",
      "Bash(do)",
      "Bash(then)",
      "Bash(echo:*)",
      "Bash(else)",
      "Bash(fi)",
      "Bash(if)",
      "Bash(git fetch:*)",
      "Bash(gh issue create:*)",
      "Bash(git stash:*)"
    ],
    "deny": [],
    "defaultMode": "dontAsk"
  },
  "model": "claude-opus-4-5-20251101",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); user=$(whoami); host=$(hostname -s); dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); branch=$(cd \"$dir\" 2>/dev/null && git -c core.useBuiltinFSMonitor=false rev-parse --abbrev-ref HEAD 2>/dev/null); if [ -n \"$branch\" ]; then printf \"%s@%s %s \\033[33m(%s)\\033[0m\" \"$user\" \"$host\" \"$(basename \"$dir\")\" \"$branch\"; else printf \"%s@%s %s\" \"$user\" \"$host\" \"$(basename \"$dir\")\"; fi"
  },
  "enabledPlugins": {
    "exa-mcp-server@exa-mcp-server": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.3"
}

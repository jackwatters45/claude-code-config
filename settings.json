{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "WebFetch",
      "WebSearch",
      "Bash(ls:*)",
      "Bash(do)",
      "Bash(then)",
      "Bash(echo:*)",
      "Bash(else)",
      "Bash(fi)",
      "Bash(if)",
      "Bash(git fetch:*)",
      "Bash(gh issue create:*)",
      "Bash(git stash:*)"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/no-rm-rf.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/main-branch-guard.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/main-branch-guard.sh"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/main-branch-guard.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); user=$(whoami); host=$(hostname -s); dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); branch=$(cd \"$dir\" 2>/dev/null && git -c core.useBuiltinFSMonitor=false rev-parse --abbrev-ref HEAD 2>/dev/null); if [ -n \"$branch\" ]; then printf \"%s@%s %s \\033[33m(%s)\\033[0m\" \"$user\" \"$host\" \"$(basename \"$dir\")\" \"$branch\"; else printf \"%s@%s %s\" \"$user\" \"$host\" \"$(basename \"$dir\")\"; fi"
  },
  "enabledPlugins": {
    "exa-mcp-server@exa-mcp-server": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "compound-engineering@every-marketplace": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "autoUpdatesChannel": "latest",
  "minimumVersion": "2.1.14"
}
